<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.csumb.jfitzgerald.airplanereserationsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".CreateAccount"
            android:label="@string/title_activity_create"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReserveSeat"
            android:label="@string/title_activity_reserve"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CancelReservation"
            android:label="@string/title_activity_cancel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ManageSystem"
            android:label="@string/title_activity_manage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CancelLogin"
            android:label="@string/title_activity_logincancel"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginAdmin"
            android:label="@string/title_activity_loginadmin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FlightConfirm"
            android:label="@string/title_activity_flightconfirm"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>